<view class="location"
    bindtap="bindChoose" >
    <image src="img/iocnLocation@3x.png" />
    <text> {{location}} </text>
</view>
<view class="location-name">
    <image src="img/iconName@3x.png" />
    <input placeholder="取个名字吧，如：公司" placeholder-style="color:rgb(216, 216, 216)" />
</view>

<view class="location-icon">
    <block wx:for="{{icon.url}}" wx:key="key" >
        <view wx:if="{{checked === index}}"
            bindtap="bindIcon"
            data-index="{{index}}" >
            <image src="img/1/{{item}}" />
        </view>
        <view wx:else
            bindtap="bindIcon"
            data-index="{{index}}" >
            <image src="img/0/{{item}}" />
        </view>

    </block>
</view>

<view class="location-btn">
    <!-- disabled -->
    <button bindtap="bindDel" >删除</button>
    <button >保存</button>
</view>
