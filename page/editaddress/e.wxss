.location, .location-name {
    padding-bottom: 18rpx;

    width: 610rpx;
    border-bottom: 2rpx solid rgb(216,216,216);
    font-size: 36rpx;
}
.location text, .location-name input {
    display: inline-block;
    width: calc(100% - 56rpx);
}
.location {
    margin-top: 304rpx;
}
.location image {
    margin: 0 6rpx;
    width: 44rpx;
    height: 56rpx;
}
.location text {
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.location-name {
    margin-top: 150rpx;
}
.location-name image {
    width: 56rpx;
    height: 56rpx;
}
.location-name input {
    letter-spacing: 1rpx;
}

.location-btn {
    display: flex;
    justify-content: center;

    width: 100%;
    margin-top: 212rpx;
}
.location-btn .btn {
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 8rpx;

    font-size: 36rpx;
    width: 240rpx;
    height: 88rpx;
    border-width: 1px;
    border-style: solid;
    background-color: white;
}
.location-btn .btn:nth-child(1) {
    border-color:rgb(233, 88, 92);
    color: rgb(233, 88, 92);
}
.location-btn .btn:nth-child(2) {
    margin-left: 90rpx;
    border-color: rgb(100, 140, 255);
    color: rgb(100, 140, 255);
}
