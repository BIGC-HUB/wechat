.location, .location-name {
    padding-bottom: 18rpx;

    width: 610rpx;
    border-bottom: 2rpx solid rgb(216,216,216);
    font-size: 36rpx;
}
.location text, .location-name input {
    display: inline-block;
    width: calc(100% - 56rpx);
}

.location {
    margin-top: 304rpx;
}
.location image {
    margin: 0 6rpx;
    width: 44rpx;
    height: 56rpx;
}
.location text {
    /* 禁止 换行 */
    white-space: nowrap;
    /* 隐藏 超出部分 */
    overflow: hidden;
    /* 省略号 替代 */
    text-overflow: ellipsis;

    color: rgb(255, 99, 61);
}

.location-name {
    margin-top: 150rpx;
}
.location-name image {
    width: 56rpx;
    height: 56rpx;
}
.location-name input {
    letter-spacing: 1rpx;
}

.location-icon {
    display: flex;
    justify-content: space-between;

    margin-top: 90rpx;
    width: 610rpx;
}
.location-icon image {
    width: 90rpx;
    height: 90rpx;
}

.location-btn {
    display: flex;
    justify-content: center;

    width: 100%;
    margin-top: 212rpx;
}
.location-btn .btn {
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 8rpx;

    font-size: 36rpx;
    width: 240rpx;
    height: 88rpx;
    border-width: 1px;
    border-style: solid;
    background-color: white;
}
.location-btn .btn:nth-child(1) {
    border-color: #d8d8d8;
    background-color: #FFF;
    color: #d8d8d8;
}
.location-btn .btn:nth-child(2) {
    margin-left: 90rpx;
    border-color: #648cff;
    color: #648cff;
}
