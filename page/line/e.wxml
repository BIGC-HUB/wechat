<!-- 简介 -->
<view class="top">
    <image class="bg" src="img/bg01@3x.png" />
    <view class="more">
        <view class="time">
            <text> {{card.time}} </text>
            <text> min </text>
        </view>
        <view class="viewision"></view>
        <view class="km">
            <text> {{card.km}} </text>
            <text> km </text>
        </view>
        <view class="viewision"></view>
        <view class="name">
            <image src="img/combinedShape@3x.png" />
            <text> {{card.name}} </text>
        </view>
    </view>
</view>
<!-- 行程概览 -->
<view class="trip">
    <text class="tittle"> 行程概览 </text>
    <view class="btn"> 启程 </view>
    <view class="dot">
        <image src="img/dot@3x.png" />
        <view class="text">
            <text> 益州大道中段1800号移动互联创业大厦… </text>
            <text> 天府广场成都博物馆停车场西入口 </text>
        </view>
    </view>
    <!-- 贝塞尔曲线 -->
    <canvas canvas-id="myCanvas" class="line" />
</view>
<!-- 出行建议 -->
<view class="suggest">
    <text class="tittle"> 出行建议 </text>
    <view class="btn"> 避堵 </view>
    <view class="sugs">
        <view class="sug">
            <image src="img/iconLeft@3x.png" />
            <view class="text">
                <text> 300 </text>
                <text> 米后进入 </text>
                <text> 人民中路二段 </text>
                <text> ，然后 </text>
            </view>
        </view>
        <view class="sug">
            <image src="img/iconLeft@3x.png" />
            <view class="text">
                <text> 400 </text>
                <text> 米后进入 </text>
                <text> 人民中路二段二段… </text>
                <text> ，然后 </text>
            </view>
        </view>
        <view class="sug">
            <image src="img/iconLeft@3x.png" />
            <view class="text">
                <text> 1500 </text>
                <text> 米后进入 </text>
                <text> 人民中路二段 </text>
                <text> ，然后 </text>
            </view>
        </view>
    </view>
</view>
<!-- 路况播报 -->
<view class="jam">
    <text class="tittle"> 路况播报 </text>
    <image bindtap="bindMap" src="img/iconMap@3x.png" />
    <view class="news">
        <view class="new">
            <view class="dot"></view>
            <text> 人民中路二段封路 </text>
            <text> 15分钟前 </text>
        </view>
        <view class="new">
            <view class="dot"></view>
            <text> 人民中路二段出现车祸 </text>
            <text> 28分钟前 </text>
        </view>
        <view class="new">
            <view class="dot"></view>
            <text> 人民中路二段出现不文明驾驶 </text>
            <text> 35分钟前 </text>
        </view>
        <view class="new">
            <view class="dot"></view>
            <text> 人民中路二段出现不文明驾驶 </text>
            <text> 35分钟前 </text>
        </view>
        <view class="new">
            <view class="dot"></view>
            <text> 人民中路二段与西御河街道交界出现不文明驾驶 </text>
            <text> 35分钟前 </text>
        </view>
    </view>
</view>
<!-- 上报 -->
<view class="report">
    <image src="img/iconShangbao@3x.png" />
</view>
