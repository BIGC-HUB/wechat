<!-- 简介 -->
<view class="top">
    <image src="../index/img/{{jam[card.jam].id}}/more.png" />
    <view class="top-box">
        <view class="top-name">
            <text> {{card.name}} </text>
        </view>
        <view class="top-more">
            <text class="time">{{card.time}}分钟</text>
            <text class="km">{{card.km}}公里</text>
        </view>
    </view>
</view>
<!-- 行程概览 -->
<view class="trip">
    <text class="tittle"> 行程概览 </text>
    <view class="btn {{startColor}}" bindtap="bindStart"> {{start}} </view>
    <view class="dot">
        <image src="img/dot.png" />
        <view class="text">
            <text> {{trip.startS}} </text>
            <text> {{trip.endS}} </text>
        </view>
    </view>
    <!-- 贝塞尔曲线 -->
    <canvas canvas-id="myCanvas" class="line" />
</view>
<!-- 出行建议 -->
<view class="suggest">
    <text class="tittle"> 出行建议 </text>
    <view class="btn btnHover" bindtap="bindSuggest"> 避堵 </view>
    <view class="sugs">
        <block wx:for="{{sugs}}" wx:for-item="e" wx:key="key">
            <view class="sug">
                <image src="img/direction/{{goIcon[e.go]}}" />
                <view class="text">
                    <text> {{e.distance}} </text>
                    <text> 米后{{e.action}} </text>
                    <text> {{e.road}} </text>
                    <text> ，然后 </text>
                </view>
            </view>
        </block>
    </view>
</view>
<!-- 用户分享 -->
<view class="around">
    <text class="tittle"> 用户分享 </text>
    <image bindtap="bindMap" src="img/iconMap.png" />
    <view class="news">
        <block wx:for="{{arounds}}" wx:for-item="e" wx:key="key" >
            <view class="new">
                <view class="dot"></view>
                <text> {{e.street}}{{e.status}} </text>
                <text> {{e.mins}} 分钟前 </text>
            </view>
        </block>
    </view>
</view>
<!-- 上报 -->
<view class="report">
    <image bindtap="bindReport" src="../index/img/iconShangbao.png" />
</view>
