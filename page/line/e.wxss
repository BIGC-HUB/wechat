/* 简介 */
.top {
    position: relative;
    width: 100%;
    height: 208rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    background: #fcfcfc;
}
.top image {
    width: 144rpx;
    height: 144rpx;
}
.top-box {
    white-space:nowrap;
    overflow:hidden;
    text-overflow:ellipsis;

    margin-left: 40rpx;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: space-between;
    width: 406rpx;
    height: 144rpx;
    line-height: 60rpx;
    font-size: 40rpx;
}
.top-more .time {
    margin-right: 40rpx;
}

