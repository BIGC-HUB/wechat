/**index.wxss**/
view {
  text-align: center;
}

button {
  width: 80%;
  border-radius: 4px;
  border: 1px solid #037DD8;
  background-color: #037DD8;
  color: white;
  pointer-events: none;
  margin: 8px auto;
}

button:active {
  background-color: #000;
}

.red {
  color: #FFF;
  background-color: #D9534F;
  border-color: #D43F3A;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 256rpx;
  height: 256rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 40px;
}
