/* 卡片样式 */
@import "../../ku/we_swiper/dist/weSwiper.wxss";
.we-container {
    overflow: inherit;
}
.we-wrapper{
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}
.we-slide{
  display: flex;
  align-items: center;
  justify-content: center;
  width: 542rpx;
  height: 100%;
  margin: 0 32rpx;
  box-sizing: border-box;
  background-color: #FFF;
  border-radius: 10rpx;
  box-shadow: 0 8rpx 16rpx 0 rgba(0,0,0,0.4);
}
.we-slide:nth-child(1) {
    margin-left: 104rpx;
}
