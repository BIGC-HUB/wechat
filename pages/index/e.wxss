.tan {
    background: rgb(242, 242, 242) url('https://bigc.cc/md/ku/bg.png');
}
/* 地址 */
.location {
    display: flex;
    justify-content: center;
    align-items: center;
    box-sizing: border-box;
    height: 52rpx;
    padding: 10rpx 0 8rpx 0;
    background-color: rgba(0,0,0,0.02);
}
.location image {
    width: 20rpx;
    height: 27rpx;
    margin: 4rpx 12rpx 4rpx 0;
}
.location text {
    font-size: 24rpx;
}

/* 卡片 */
.card {
    margin-top: 60rpx;
    height: 874rpx;
    /*background-color: pink;*/
}
.card .bg {
    width: 542rpx;
    height: 542rpx;
}
.card .refresh {
    position: absolute;
    top: 40rpx;
    right: 40rpx;
    width: 60rpx;
    height: 60rpx;
}
.card .title {
    display: flex;
    align-items: center;
    height: 60rpx;
    width: 100%;
    margin: 36rpx 0 64rpx 40rpx;
}
.title image {
    width: 60rpx;
    height: 60rpx;
    margin-right: 20rpx;
}
.title text {
    font-size: 36rpx;
}
.card .more {
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
}
.more text:nth-child(2n+1) {
    font-size: 48rpx;
}
.more text:nth-child(2n) {
    font-size: 24rpx;
}
.more text:nth-child(3) {
    margin-left: 60rpx;
}
.more image {
    margin-left: 76rpx;
    width: 80rpx;
    height: 80rpx;
}
/* 上报 */
.bottom {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 220rpx;
}
.bottom image {
    width: 116rpx;
    height: 116rpx;
}

/* 卡片样式 */
@import "../../ku/we_swiper/dist/weSwiper.wxss";
.we-container {
    overflow: inherit;
}
.we-wrapper{
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}
.we-slide{
    display: flex;
    flex-wrap: wrap;
    align-content: flex-start;
    width: 542rpx;
    height: 100%;
    margin: 0 32rpx;
    box-sizing: border-box;
    background-color: #FFF;
    border-radius: 10rpx;
    box-shadow: 0 8rpx 16rpx 0 rgba(0,0,0,0.4);
}
.we-slide:nth-child(1) {
    margin-left: 104rpx;
}
