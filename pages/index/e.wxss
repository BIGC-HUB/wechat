.tan {
    background-color: rgb(235, 235, 235);
    /*background: rgb(242, 242, 242) url('https://bigc.cc/md/ku/bg.png');*/
}
/* 地址 */
.location {
    display: flex;
    justify-content: center;
    align-items: flex-start;
    box-sizing: border-box;
    height: 40rpx;
    background-color: rgb(248, 248, 248);
}
.location text {
    font-size: 24rpx;
}

.add {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 100%;
}
.add image {
    width: 114rpx;
    height: 114rpx;
}
.add text {
    margin-top: 56rpx;
    font-size: 36rpx;
    color: rgb(112,112,112);
}
/* 卡片 */
.card {
    margin-top: 60rpx;
    height: 870rpx;
}
.card .bg {
    width: 560rpx;
    height: 560rpx;
}
.card .refresh {
    position: absolute;
    top: 40rpx;
    right: 40rpx;
    width: 60rpx;
    height: 60rpx;
}
.card .title {
    display: flex;
    align-items: center;
    height: 60rpx;
    margin: 36rpx 0 64rpx 40rpx;
}
.title image {
    width: 60rpx;
    height: 60rpx;
    margin-right: 20rpx;
}
.title text {
    font-size: 36rpx;
}
.card .more {
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
}
.more text:nth-child(2n+1) {
    font-size: 48rpx;
}
.more text:nth-child(2n) {
    font-size: 24rpx;
}
.more text:nth-child(3) {
    margin-left: 60rpx;
}
.more image {
    margin-left: 76rpx;
    width: 80rpx;
    height: 80rpx;
}
/* 上报 */
.bottom {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 88rpx;
}
.bottom image {
    width: 105rpx;
    height: 105rpx;
}

/* 卡片样式 */
@import "../../ku/we_swiper/dist/weSwiper.wxss";
.we-container {
    overflow: inherit;
}
.we-wrapper{
    width: 100%;
    height: 100%;
    box-sizing: border-box;
}
.we-slide{
    display: flex;
    flex-direction: column;
    align-content: flex-start;
    width: 560rpx;
    height: 100%;
    margin: 0 30rpx;
    box-sizing: border-box;
    background-color: #FFF;
    border-radius: 10rpx;
    box-shadow: 0 9rpx 12rpx 3rpx rgba(0,0,0,0.1);
}
.we-slide:nth-child(1) {
    margin-left: 95rpx;
}
