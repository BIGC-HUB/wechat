/* galbol */

button {
    /*position: static;*/
    display: inline-block;
}

page {
    font-size: 16px;
    color: #343434;
    margin: 0 auto;
    text-align: center;
    letter-spacing: .01rem;
    background-color: rgb(242, 242, 242);
    font-family: SF UI Text, Hiragino Sans GB, Roboto, Segoe UI, Microsoft Yahei, sans-serif;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
}

.tan {
    position: fixed;
    width: 100%;
    height: 100%;
    text-align: center;
}
.center {
    position:relative;
    top: 50%;
    transform: translateY(-61.8%);
}

.box {
    width: 100%;
}
/* icon*/

.fa-lg {
    font-size: 1.33333333rem;
    line-height: 0.75rem;
    vertical-align: -15%;
}
/* button */

.btn {
    cursor: pointer;
    vertical-align: middle;
    border: 1px solid transparent;
}
.btn-white {
    color: #8590A6;
    background-color: #FFF;
    border-color: #9DA3A6;
}
.btn-white:active {
    background-color: #F5F6F9;
}
.btn-blue {
    color: #FFF;
    background-color: #037DD8;
    border-color: #0771C1;
}
.btn-blue:active {
    background-color: #0771C1;
    border-color: #0363AC;
}
.btn-red {
    color: #FFF;
    background-color: #D9534F;
    border-color: #D43F3A;
}
.btn-red:active {
    background-color: #C9302C;
    border-color: #AC2925;
}
