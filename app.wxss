/* galbol */

button {
    display: inline-block;
}

page {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;

    margin: 0 auto;
    text-align: center;

    font-size: 16px;
    color: #343434;
    /*background-color: rgb(242, 242, 242);*/
}

page, button, input, select, textarea {
    font-family: SF UI Text,Hiragino Sans GB,Roboto,Segoe UI,Microsoft Yahei,sans-serif !important;
    letter-spacing: 0.8rpx;
}
button {
    margin: 0;
}

.tan {
    position: fixed;
    width: 100%;
    height: 100%;
    text-align: center;
}
.center {
    position:relative;
    top: 50%;
    transform: translateY(-50%);
}

.box {
    width: 100%;
}

