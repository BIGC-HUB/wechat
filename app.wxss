/* 按钮样式 */
.btn {
  margin: 8px auto;
  width: 80%;
  vertical-align: middle;
  border-radius: 4px;
  border: 1px solid transparent;
}
.btn-white {
  color: #8590A6;
  background-color: #FFF;
  border-color: #9DA3A6;
}
.btn-white:active {
  background-color: #F5F6F9;
}
.btn-blue {
  color: #FFF;
  background-color: #037DD8;
  border-color: #0771C1;
}
.btn-blue:active {
  background-color: #0771C1;
  border-color: #0363AC;
}
.btn-red {
  color: #FFF;
  background-color: #D9534F;
  border-color: #D43F3A;
}
.btn-red:active {
  background-color: #C9302C;
  border-color: #AC2925;
}
